{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**",
        ".vitepress/**",
        "!.vitepress/config.mts"
      ]
    },
    "lint": {},
    "lint:fix": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "release": {
      "dependsOn": ["^build"]
    }
  },
  "globalEnv": ["CI", "NODE_ENV", "PORT"]
}
